{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@/shared/*": ["../shared/*"],
    },
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
  },
  "include": [
    "src/**/*.ts",
    "types.ts",
    "*.ts",
    "../shared/**/*.ts",
    "../drizzle.config.ts",
  ],
  "exclude": ["node_modules"],
}
