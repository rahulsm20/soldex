{
  "name": "sol-indexer",
  "private": true,
  "workspaces": [
    "./*"
  ],
  "scripts": {
    "dev:indexer": "cd indexer && bun run dev",
    "dev:api": "cd api && bun run dev",
    "drizzle:generate": "bunx drizzle-kit generate",
    "drizzle:migrate": "bunx drizzle-kit push",
    "test": "turbo run test",
    "test:unit": "turbo run test:unit",
    "test:e2e": "turbo run test:e2e",
    "build": "turbo run build",
    "dev": "cd client && bun dev & cd server && bun dev & wait",
    "start": "cd server && bun start & cd client && bun start & wait"
  },
  "dependencies": {
    "bun-types": "^0.1.0",
    "chartjs-node-canvas": "^5.0.0",
    "cors": "^2.8.5",
    "dayjs": "^1.11.19",
    "express": "^4.19.2",
    "ip": "^2.0.1",
    "turbo": "^2.8.3"
  },
  "devDependencies": {
    "typescript": "^5.4.5",
    "drizzle-kit": "^0.31.8",
    "dotenv": "^17.2.3",
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.21",
    "@types/ip": "^1.1.3"
  },
  "packageManager": "bun@1.2.18"
}
