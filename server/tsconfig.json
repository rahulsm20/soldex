{
  "compilerOptions": {
    "target": "ES2022",
    "module": "es2022",
    "moduleResolution": "bundler",

    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "shared/*": ["../shared/*"],
      "@soldex/*": ["../*"],
    },

    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "types": ["bun-types"],
  },
  "include": [
    "src/**/*.ts",
    "types.ts",
    "*.ts",
    "../shared/**/*.ts",
    "../shared/**/*.ttf",
    "../drizzle.config.ts",
  ],
  "exclude": ["node_modules"],
}
